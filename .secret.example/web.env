# JWT expire time
#JWT_EXP=30
# JWT issuer
#JWT_ISS=example.com
# JWT secret, used to sign token
#JWT_SECRET=SuperSecretString
# noreply email address
#SMTP_NOREPLY=noreply@example.com
# noreply password
#SMTP_NOREPLY_PASSWORD=noreply
# SMTP server
#SMTP_SERVER=mail.example.com
# BREVO SMTP API Key from backend
#BREVO_SMTP_KEY = your_api_key_here

# ============================================
# Security Settings (for production)
# ============================================

# CORS allowed origins (comma-separated, supports wildcards)
# Examples:
#   - https://example.com (exact match)
#   - https://*.example.com (any subdomain)
#   - http://localhost:* (any port)
# Default (if not set): http://localhost:*,http://127.0.0.1:*
CORS_ALLOWED_ORIGINS=https://noj-2025-first.csie.ntnu.edu.tw,https://*.nfe.pages.dev

# Force Secure flag on cookies (set to 'true' for HTTPS production)
# Default: false
#FORCE_SECURE_COOKIES=true

# CSRF strict mode - enforce Origin/Referer validation
# Default: false (only checks when SERVER_NAME is set)
#CSRF_STRICT_MODE=true

# Rate limiting for login attempts
# Default: enabled with 5 attempts, 900 second lockout
#RATE_LIMIT_ENABLED=true
#RATE_LIMIT_MAX_ATTEMPTS=5
#RATE_LIMIT_LOCKOUT_SECONDS=900